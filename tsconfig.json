{
  "compilerOptions": {
    "strict": true,
    "target": "ES5",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "types",
    "typeRoots": ["node_modules/@types", "types"]
  }
}
