{
    "compilerOptions": {
        "baseUrl": ".",
        "strict": true,
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "declarationDir": "types",
        "typeRoots": ["node_modules/@types", "types"],
        "paths": {
            "@zk-kit/*": ["packages/*/src"]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "target": "esnext",
            "module": "commonjs"
        }
    }
}
